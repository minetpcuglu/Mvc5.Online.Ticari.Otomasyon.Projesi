@model IEnumerable<EntityLayer.Concrete.SımpleTable2>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Personel-Departman</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress</th>
                    <th style="width: 40px">Kaç Personel</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{ sirano++;} @sirano</td>
                        <td>@item.depname</td>



                        @if (item.DepId < 3)
                        {
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            </td>
                        }
                        @if (item.DepId == 3)
                        {
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            </td>
                        }
                        @if (item.DepId > 3)
                        {
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            </td>
                        }
                     
                        <td><span class="badge bg-warning">@item.DepId</span></td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>