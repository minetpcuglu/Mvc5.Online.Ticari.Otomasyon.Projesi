@model EntityLayer.Concrete.DinamicBillDTO
@{
    ViewBag.Title = "DinamicBill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<br />
<br />

<div class="panel panel-default">

    <div class="panel-heading">

        <div class="row">

            <h2 class="panel-title pull-left" style="margin-left:10px;">

                <strong>Fatura & Kalem İşlemleri</strong>

            </h2>

            <button style="margin-right:10px" class="btn btn-primary pull-right" onclick="addNewOrder()">Yeni Fatura Girişi</button>

        </div>

    </div>




    @foreach (var item in Model.bills)

    {

        <div class="panel-body">

            <table class="table table-striped table-responsive">

                <tbody>

                    <tr>

                        <th>Seri-Sıra No : @item.BillSerialNo - @item.BillSıraNo </th>
                        <th>Teslim Eden: @item.Submitter</th>
                        <th>Tarih - Saat: @item.Date.ToShortDateString() / @item.Hour </th>
                        <th>Vergi Dairesi: @item.TaxAdministration</th>




                    </tr>


                    <tr>

                        <td colspan="41">

                            <table class="table table-bordered">

                                <tbody>

                                    <tr>

                                        <th>Açıklama</th>

                                        <th>Miktar</th>

                                        <th>Fiyat</th>


                                    </tr>

                                    @{

                                        var totalBill = 0;

                                    }

                                    @foreach (var item2 in Model.billPens)

                                    {

                                        <tr>

                                            <td>@item2.Description</td>

                                            <td>@item2.Piece</td>

                                            <td>@item2.UnitPrice</td>




                                        </tr>

                                        totalBill = totalBill + @Convert.ToInt32(item2.Amount);

                                    }

                                </tbody>

                            </table>

                            <span class="pull-right" style="margin-right:100px;"><strong>Total Bill :  </strong> <b>@totalBill</b> </span>

                        </td>

                    </tr>

                </tbody>


            </table>

        </div>



    }



</div>


@*Adım 2*@



<div class="modal fade" id="newOrderModal">

    <div class="modal-dialog modal-lg" style=" width: 900px !important;">

        <div class="modal-content">

            <div class="modal-header">

                <a href="#" class="close" data-dismiss="modal">&times;</a>

                <h4>Yeni Fatura Girişi</h4>

            </div>

            <form id="NewOrderForm">

                <div class="modal-body">

                    @*Customer Details*@

                    <h5 style="color:#ff6347">Fatura Detayları</h5>

                    <hr />

                    <div class="form-horizontal">

                        <input type="hidden" id="BillId" />

                        <div class="form-group">

                            <label class="control-label col-md-2">

                                Seri No:

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="BillSerialNo" name="BillSerialNo" placeholder=" Seri Numarası" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                Sıra No:

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="BillSıraNo" name="BillSıraNo" placeholder="Sıra No" class="form-control" />

                            </div>
                            <br />


                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">

                                Vergi Dairesi:

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="TaxAdministration" name="TaxAdministration" placeholder="Vergi Dairesi" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                Teslim Eden:

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="Submitter" name="Submitter" placeholder="Teslim Eden" class="form-control" />

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">

                                Tarih:

                            </label>

                            <div class="col-md-4">

                                <input type="date" id="Date" name="Date" placeholder=" Tarih" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                Saat:

                            </label>

                            <div class="col-md-4">

                                <input type="time" id="Hour" name="Hour" placeholder=" Saat" class="form-control" />

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">

                                Teslim Alan:

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="Deliveryarea" name="Deliveryarea" placeholder="Teslim Alan Personel" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                               Toplam:

                            </label>

                            <div class="col-md-4">

                                <input type="number" id="Totel" name="Totel" placeholder=" Toplam Tutar" class="form-control" />

                            </div>
                        </div>

                    </div>



                    @*Order Details*@

                    <h5 style="margin-top:10px;color:#ff6347">Fatura Kalemleri</h5>

                    <hr />

                    <div class="form-horizontal">

                        <input type="hidden" id="id" />

                        <div class="form-group">

                            <label class="control-label col-md-2">

                               Açıklama

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="Description" name="Description" placeholder="Açıklama" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                Fiyat

                            </label>

                            <div class="col-md-4">

                                <input type="number" id="UnitPrice" name="UnitPrice" placeholder="Birim Fiyatı" class="form-control" />

                            </div>

                        </div>



                        <div class="form-group">

                            <label class="control-label col-md-2">

                               Adet

                            </label>

                            <div class="col-md-4">

                                <input type="number" id="Piece" name="Piece" placeholder="Adet" class="form-control" />

                            </div>

                            <div class="col-md-2 col-lg-offset-4">

                                <a id="addToList" class="btn btn-primary">Listeye Ekle</a>

                            </div>

                        </div>



                        <table id="detailsTable" class="table">

                            <thead>

                                <tr>

                                    <th style="width:30%">Açıklama</th>

                                    <th style="width:20%">Adet</th>

                                    <th style="width:20%">Birim Fiyat</th>

                                    <th style="width:25%">Tutar</th>

                                </tr>

                            </thead>

                            <tbody></tbody>

                        </table>

                    </div>

                </div>

                <div class="modal-footer">

                    <button type="reset" class="btn btn-primary" data-dismiss="modal"><b>İptal</b></button>

                    <button id="saveOrder" type="submit" class="btn btn-danger">Kaydet</button>

                </div>

            </form>

        </div>

    </div>

</div>

@section scripts{

    <script>

        //Show Modal.

        function addNewOrder() {

            $("#newOrderModal").modal();

        }

        //Add Multiple Order.

        $("#addToList").click(function (e) {

            e.preventDefault();



            if ($.trim($("#Description").val()) == "" || $.trim($("#Piece").val()) == "" || $.trim($("#UnitPrice").val()) == "" ) return;



            var Description = $("#Description").val(),

                Piece = $("#Piece").val(),

                UnitPrice = $("#UnitPrice").val(),

               

                detailsTableBody = $("#detailsTable tbody");



            var deger = '<tr><td>' + Description + '</td><td>' + Piece + '</td><td>' + UnitPrice + '</td><td>' + (parseFloat(Piece) * parseInt(UnitPrice)) + '</td><td><a data-itemId="0" href="#" class="deleteItem">Remove</a></td></tr>';

            detailsTableBody.append(deger);

            clearItem();

        });

        //After Add A New Order In The List, Clear Clean The Form For Add More Order.

        function clearItem() {

            $("#Description").val('');
            $("#Piece").val('');
            $("#UnitPrice").val('');

        }

        // After Add A New Order In The List, If You Want, You Can Remove It.

        $(document).on('click', 'a.deleteItem', function (e) {

            e.preventDefault();

            var $self = $(this);

            if ($(this).attr('data-itemId') == "0") {

                $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {

                    $(this).remove();

                });

            }

        });

        //After Click Save Button Pass All Data View To Controller For Save Database

        function saveOrder(data) {

            return $.ajax({

                contentType: 'application/json; charset=utf-8',

                dataType: 'json',

                type: 'POST',

                url: "/Bill/SaveBill",

                data: data,

                success: function (result) {

                    alert(result);

                    location.reload();

                },

                error: function () {

                    alert("Error!")

                }

            });

        }

        //Collect Multiple Order List For Pass To Controller

        $("#saveOrder").click(function (e) {

            e.preventDefault();



            var orderArr = [];

            orderArr.length = 0;



            $.each($("#detailsTable tbody tr"), function () {

                orderArr.push({

                    Description: $(this).find('td:eq(0)').html(),

                    Piece: $(this).find('td:eq(1)').html(),

                    UnitPrice: $(this).find('td:eq(2)').html(),

                    Amount: $(this).find('td:eq(3)').html()

                });

            });





            var data = JSON.stringify({

                BillSerialNo: $("#BillSerialNo").val(),
                BillSıraNo: $("#BillSıraNo").val(),
                TaxAdministration: $("#TaxAdministration").val(),
             
                Deliveryarea: $("#Deliveryarea").val(),
                Submitter: $("#Submitter").val(),
             
                Date: $("#Date").val(),
                Hour: $("#Hour").val(),

               
                Totel: $("#Totel").val(),

                billPens: orderArr

            });



            $.when(saveOrder(data)).then(function (response) {

                console.log(response);

            }).fail(function (err) {

                console.log(err);

            });

        });

    </script>

}

