
@model EntityLayer.Concrete.Current



@using (Html.BeginForm("UpdateCurrentPassword", "CurrentPanel", FormMethod.Post))
{ 
<form class="form-horizontal">

    <div class="form-group row">

      

        <div class="col-sm-10">

            @Html.HiddenFor(x => x.CurrentId, new { @class = "form-control" })

        </div>

    </div>
    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">İsim</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CurrentName, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputEmail" class="col-sm-2 col-form-label">Soyadı</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CurrentSurname, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">E-mail</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CurrentMail, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputExperience" class="col-sm-2 col-form-label">Şehir</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CurrentCity, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <div class="checkbox">

                <label>

                    <input type="checkbox"> I agree to the <a href="#">Bilgileri okudum , onaylıyorum.</a>

                </label>

            </div>

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-danger">Güncelle</button>

        </div>

    </div>

</form>
}
