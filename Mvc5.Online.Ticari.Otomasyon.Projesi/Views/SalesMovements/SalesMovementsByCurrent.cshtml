@using EntityLayer.Concrete
@model List<SalesMovements>
@{
    ViewBag.Title = "SalesMovementsByCurrent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2> Satış Detayı Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"> Cari Adı: @ViewBag.cari</li>
</ol>


<table class="table table-hover">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Fiyat</th>
        <th>Adet</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.SalesMovementsId</th>
            <td>@item.Product.ProductName</td>
            <td>@item.Employee.EmployeeName @item.Employee.EmployeeSurname</td>
            <td>@item.Price ₺</td>
            <td>@item.Piece </td>
            <td>@item.TotelPrice ₺</td>
            <td>@item.Date.ToShortDateString()</td>
            <td><a href="#" class="btn btn-default" style="background-color:cornflowerblue">Yazdır</a></td>

        </tr>
    }
</table>

