@using EntityLayer.Concrete
@model List<BillPen>
@{
    ViewBag.Title = "BillPenByBill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Fatura Kalem </h2>
<br />

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Tutar</th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BillPenId</th>
            <td>@item.Description</td>
            <td>@item.Piece</td>
            <td>@item.UnitPrice</td>
            <td>@item.Amount</td>
            @*<td><a href="/SalesMovements/SalesMovementsByEmployee/@item.EmployeeId" class="btn btn-default" style="background-color:orangered">Satışlar</a></td>*@
        </tr>
    }
</table>


