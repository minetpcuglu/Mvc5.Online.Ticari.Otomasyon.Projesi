@using EntityLayer.Concrete
@model List<BillPen>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<table class="table table-hover">

    <tr>

        <th>#</th>
        <th>Ürün Adı</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Tutar</th>



    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.BillPenId</th>
            <th>@item.Description</th>
            <th>@item.Piece</th>
            <th>@item.UnitPrice</th>
            <th>@item.Amount</th>


           


        </tr>
    }
</table>
<br />
<br />
<a href="/BillPen/BillAdd/" class="btn btn-outline-dark"><b>Yeni Kalem Girişi</b></a>

